
import random


def choose():
    options = int(input("how many options do you have to choose from? "))
    i = 0
    options_list = []


    while i < options:
        opt =  str(input("option: "))
        options_list.append(opt)
        i+=1



    choice = random.choice(options_list)
    
    options_list = ", ".join(options_list)

    return f'these are your options are your options: {options_list} \n the random choice is: {choice}'

